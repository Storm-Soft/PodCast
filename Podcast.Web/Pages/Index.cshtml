@page
@model IndexModel
@{
    ViewData["Title"] = Constantes.NomEcoleNiveau;
}

<div class="text-center">
    <h1 class="display-4">Podcast </h1>
    <div>
        <p>Bienvenue sur le podcast des @Constantes.NomEcoleNiveau!</p>
    </div>
    <div>
        <img src="@($"/Content/{Constantes.PhotoEcole}")" style="float:left;" />
    </div>
    @if (Model.Playlist.Episodes.Count() == 0)
    {
        <div>
            <p>Aucune playlist ou épisode à afficher pour le moment.</p>
        </div>
    }
    else
    {
        @foreach (var episode in Model.Playlist.Episodes)
        {
            <div class="episode">
                <figure>
                    <figcaption>@episode.TitreEpisode</figcaption>
                    <a href="@($"/Content/Audio/{episode.NomEpisode}.mp3")" download>Télécharger</a><br />
                    <audio controls src="@($"/Content/Audio/{episode.NomEpisode}.mp3")" style="margin-top:3px;">
                        Votre navigateur ne supporte pas l'élément
                        <code>audio</code>.
                    </audio>
                </figure>
            </div>
        }
    }
</div>